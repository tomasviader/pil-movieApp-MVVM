<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:textColor">#B8C1F6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:paddingTop">@dimen/padding_top_title</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
    </style>

    <style name="AppDescriptionStyle">
        <item name="android:textColor">@color/description_text_color</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="OverviewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/overview_text_size</item>
    </style>

     <style name="ReleaseDateStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/release_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textFontWeight">900</item>
    </style>

    <style name="VoteAverageDateStyle">
        <item name="android:textColor">@color/vote_count_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/container_margin</item>
    </style>

    <style name="AlertTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/alert_title_size</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
    </style>

     <style name="AlertMessageStyle">
        <item name="android:textSize">@dimen/alert_text_size</item>
        <item name="android:layout_marginTop">@dimen/container_margin</item>
    </style>

    <style name="AlertButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/alert_button_text_size</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:backgroundTint">@color/alert_button_background_color</item>
    </style>

    <style name="ButtonBackStyle">
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:layout_marginTop">@dimen/container_margin</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonErrorDialogStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_error_button</item>
        <item name="android:background">@color/error_button_background</item>
    </style>

    <style name="ButtonMoviesStyle">
        <item name="android:layout_marginTop">@dimen/margin_top_description</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_button_movies</item>
    </style>

    <style name="EmptyStateText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/container_margin</item>
        <item name="android:textSize">@dimen/empty_state_text_size</item>
        <item name="android:textAlignment">center</item>


    </style>


</resources>
